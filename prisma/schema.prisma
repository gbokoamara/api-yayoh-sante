generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Produit principal
model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String   // Pas de @unique avec MongoDB
  subtitle    String?
  price       Float?
  description String
  traditionalUse String
  disclaimer  String   @default("Ce produit est un témoignage d'un savoir-faire traditionnel. Il ne s'agit pas d'un médicament...")
  mainImage   String
  images      String[]
  contactPhone String?
  whatsappNumber String?
  email       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  testimonials Testimonial[]
  galleries    Gallery[]
}

// Témoignages
model Testimonial {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  location  String
  text      String
  rating    Int      @default(5)
  avatar    String?
  videoUrl  String?
  approved  Boolean  @default(true)
  createdAt DateTime @default(now())
  productId String   @db.ObjectId
  
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
}

// Galerie
model Gallery {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  imageUrl  String
  videoUrl  String?
  type      String   @default("image") // "image" ou "video"
  order     Int      @default(0)
  productId String?   @db.ObjectId
  
  product   Product?  @relation(fields: [productId], references: [id], onDelete: Cascade)
}

// Administrateur
model Admin {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   // Pas de @unique avec MongoDB
  password  String
  name      String
  role      String   @default("editor") // "admin" ou "editor"
  createdAt DateTime @default(now())
}

// Paramètres du site
model SiteSettings {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  contactPhone   String
  whatsappNumber String
  email          String
  address        String?
  socialLinks    Json?    // { facebook, instagram, etc. }
  updatedAt      DateTime @updatedAt
}